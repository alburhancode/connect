@model IEnumerable<Recruitwise.Models.DashBoard.DashboardMessage>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="details_plain" cellpadding="10">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                    <b>
                        @Html.DisplayFor(modelItem => item.Text)
                    </b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MessageId }) |
                    @Html.ActionLink("Reply", "Reply", new { id = item.MessageId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MessageId })
                </td>
            </tr>
            foreach (var reply in item.Replies)
            {
                <tr>
                    <td style="padding-left: 50px;">
                        <i>reply from: @reply</i>
                    </td>
                </tr>
            }
        }

    </table>
</body>
</html>
