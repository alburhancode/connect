@model Connect.Models.Records.RecordViewModel

@{
    ViewBag.Title = "EditRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditRecord</h2>

@using (Html.BeginForm("EditRecordSave", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Individual.Id)
    <div class="form-horizontal">
        <h4>RecordViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.Label("Select a status to apply")
                    </div>
                </td>
                <td style="padding-left: 35px;">
                    <div class="form-group">
                        @Html.EnumDropDownListFor(model => model.Individual.State, new { htmlAttributes = new { @class = "form-control", placeholder = "Individual State" } })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Individual.ManualMessage, "Custom message (optional)")
                    </div>
                </td>
                <td style="padding-left: 35px;">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Individual.ManualMessage, new { htmlAttributes = new { @class = "form-control", placeholder = "Add a custom message here", MaxLength = 2048 } })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-default"/>
                    </div>
                </td>
            </tr>
        </table>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Records", new { userType = Model.Individual.UserType })
</div>
